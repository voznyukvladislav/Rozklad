@model List<Day>

<script src="~/js/accordion.js"></script>
<script src="~/js/jQuery.js"></script>
<script src="~/js/deleteAsync.js"></script>

<div>
	@for(int i = 0; i < Model?.Count(); i++)
	{
		<div class="addingForm">
			<p class="formHeader"> #@(i + 1) </p>
			<p class="formHeader"> Day Id: @Model[i].Id </p>
			<hr>

			@for(int j = 0; j < Model[i].DayNames.Count; j++)
			{
				string? fullName = Model[i].DayNames.ElementAt(j).Name;

				<button class="accordion" onclick="openClose(this)"> @Model[i].DayNames.ElementAt(j).Language.Name : @fullName </button>
				<div class="accordionContent">
					<p> 1. Name: @Model[i].DayNames.ElementAt(j).Name </p>
				</div>
			}	
			<table style="margin: 0 auto; width: 80%;">
                <tr>
                    <td>
                        <a onclick="deleteAsync('Day/Delete', @Model[i].Id, 'calendar day')" class="formButton"> Delete </a>
                    </td>
                    <td>
                        <a asp-controller="Day" asp-action="Edit" asp-route-id="@Model[i].Id" class="formButton"> Edit </a>
                    </td>
                </tr>
            </table>  
		</div>
	}
</div>