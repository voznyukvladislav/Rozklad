@model Group

<div class="addingForm">
    <p class="formHeader"> Editing group </p>
    <hr>
    <form method="post" asp-controller="Group" asp-action="Edit">      
        <input readonly type="number" name="group.Id" value="@Model?.Id" style="display: none;">
        @for(int i = 0; i < Model?.GroupNames.Count; i++)
        {
            <div class="addingSubForm">
                <p class="formHeader"> @(Model.GroupNames.ElementAt(i).Language.Name): </p>
                <input readonly type="number" name="group.GroupNames[@i].Language.Id" value="@Model.GroupNames.ElementAt(i).Language.Id" style="display: none;">
                <input readonly type="number" name="group.GroupNames[@i].Id" value="@Model.GroupNames.ElementAt(i).Id" style="display: none;">

                <input type="text" name="group.GroupNames[@i].Name" value="@Model.GroupNames.ElementAt(i).Name" placeholder="Enter group's name" class="formInput">
            </div>
        }
        <input type="submit" class="formButton" value="Edit group">
    </form>
</div>