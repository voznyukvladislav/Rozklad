@model Week;

<div class="addingForm">
    <p class="formHeader"> Editing week name </p>
    <hr>
    <form method="post" asp-controller="Week" asp-action="Edit">      
            <div class="addingSubForm">
                <input readonly style="display: none;" type="text" name="week.Id" value="@Model.Id"  class="formInput">
                <input type="text" name="week.Name" value="@Model.Name" placeholder="Enter week's name" class="formInput">
            </div>
        <input type="submit" class="formButton" value="Edit week">
    </form>
</div>