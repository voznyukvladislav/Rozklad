@model List<Language>

<div class="addingForm">
    <p class="formHeader"> Adding new discipline </p>
    <hr>
    <form method="post" asp-controller="Discipline" asp-action="Add">      
        @for(int i = 0; i < Model?.Count; i++)
        {
            <div class="addingSubForm">
                <p class="formHeader"> @(Model[i].Name): </p>
                <input readonly type="number" name="languagesId[@i]" value="@Model[i].Id" style="display: none;">
                <input type="text" name="discipline.DisciplineNames[@i].Name" placeholder="Enter discipline's name" class="formInput">
            </div>
        }
        <input type="submit" class="formButton" value="Add discipline">
    </form>
</div>