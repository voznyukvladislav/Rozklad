@model List<Teacher>

<script src="~/js/accordion.js"></script>

<div>
	@for(int i = 0; i < Model.Count(); i++)
	{
		<div class="addingForm">
			<p class="formHeader"> #@(i + 1) </p>
			<p class="formHeader"> Teacher Id: @Model[i].Id </p>
			<hr>

			@for(int j = 0; j < Model[i].TeacherNames.Count; j++)
			{
				string fullName = Model[i].TeacherNames.ElementAt(j).GetFullName();

				<button class="accordion" onclick="openClose(this)"> @Model[i].TeacherNames.ElementAt(j).Language.Name : @fullName </button>
				<div class="accordionContent">
					<p> 1. Name: @Model[i].TeacherNames.ElementAt(j).Name </p>
					<p> 2. Surname: @Model[i].TeacherNames.ElementAt(j).Surname </p>
					<p> 3. Patronymic: @Model[i].TeacherNames.ElementAt(j).Patronymic </p>
				</div>
			}	
			<table style="margin: 0 auto; width: 80%;">
                <tr>
                    <td>
                        <a asp-controller="Teacher" asp-action="Delete" asp-route-teacherId="@Model[i].Id" class="formButton"> Delete </a>
                    </td>
                    <td>
                        <a asp-controller="Teacher" asp-action="EditForm" asp-route-id="@Model[i].Id" class="formButton"> Edit </a>
                    </td>
                </tr>
            </table>  
		</div>
	}
</div>